{
  "version": 6,
  "configurePresets": [
    {
      "name": "Debug",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_PREFIX_PATH": "${sourceDir}/deps/install/Debug",
        "DEPS_INCLUDE_DIR": "${sourceDir}/deps/install/Debug/include"
      }
    },
    {
      "name": "Release",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": "${sourceDir}/deps/install/Release",
        "DEPS_INCLUDE_DIR": "${sourceDir}/deps/install/Release/include"
      }
    },
    {
      "name": "Clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-w"
      }
    },
    {
      "name": "Ninja",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "MSVC",
      "hidden": true,
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "Mac-Debug",
      "inherits": [
        "Ninja",
        "Clang",
        "Debug"
      ]
    },
    {
      "name": "Mac-Release",
      "inherits": [
        "Ninja",
        "Clang",
        "Release"
      ]
    },
    {
      "name": "Windows-Debug",
      "inherits": [
        "MSVC",
        "Debug"
      ]
    },
    {
      "name": "Windows-Release",
      "inherits": [
        "MSVC",
        "Release"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "Windows-Debug",
      "configurePreset": "Windows-Debug",
      "configuration": "Debug"
    },
    {
      "name": "Windows-Release",
      "configurePreset": "Windows-Release",
      "configuration": "Release"
    },
    {
      "name": "Mac-Debug",
      "configurePreset": "Mac-Debug",
      "configuration": "Debug"
    },
    {
      "name": "Mac-Release",
      "configurePreset": "Mac-Release",
      "configuration": "Release"
    }
  ]
}
